{
    "exclude": [
        "/tests"
    ],
    "include": [
        "./src"
    ],
    "compilerOptions": {
        "rootDirs": [
            "./"
        ],
        "outDir": "./dist/",
        "baseUrl": "./",
        "noImplicitAny": false,
        "module": "CommonJS",
        "target": "ES2015",
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "experimentalDecorators": true,
        "declaration": false,
        "lib": [
            "es5",
            "ES2015",
            "DOM"
        ]
    }
}